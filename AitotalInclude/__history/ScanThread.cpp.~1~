#include <System.hpp>
#pragma hdrstop

#include "ScanThread.h"
#include "Aitotal1.h"
#include "AitotalInclude/ScanVTIndy/ScanVTIndy1.h"

#pragma package(smart_init)
//---------------------------------------------------------------------------

//   Important: Methods and properties of objects in VCL can only be
//   used in a method called using Synchronize, for example:
//
//      Synchronize(&UpdateCaption);
//
//   where UpdateCaption could look like:
//
//      void __fastcall ThreadScan::UpdateCaption()
//      {
//        Form1->Caption = "Updated in a thread";
//      }
//---------------------------------------------------------------------------

__fastcall ThreadScan::ThreadScan(bool CreateSuspended)
	: TThread(CreateSuspended)
{
}
//---------------------------------------------------------------------------
void __fastcall ThreadScan::Execute()
{
	//---- Place thread code here ----

	StopThread = false;
   //CopyTListToListView();
   CopyTListToListViewofStream();
	   if(ProgressBar1->Max <=0)
		  ProgressBar1->Position = 0;

	   ProgressBar1->Max = ListView1->Items->Count;

	   int i = 0;
	   int ApikeyNumber =0;

	   while(!StopThread && ListView1->Items->Count)
	   {


		  // Спомощью цикла проверяю есть ли поток с номером i (ThUpload[i])
		  // Если все значения от 0 до 50 заняты, то идет ожидание по таймеру.
		  for(int q=0;q <= AtOptions.Thread;q++)
		  {
			 if(StopThread)
				break;

			 if(q == AtOptions.Thread)
			 {
				q=0;
				PauseProba("00:00:05");
			 }

			 if(VTIndy[q] ==NULL)
			 {
				i=q;
				break;
			 }
		  }

		  if(ListView1->Items->Count == 0)
			 break;

		  Base MyTestBase;

		  if(!GetStatusConnect())
		  {
			  ShowMessage("Интернет не подключен");
			  break;
		  }
		  if(StopThread)
			 break;



		  if(!GetStatusConnect())
		  {
			 ShowMessage("Интернет не подключен");
			 break;
		  }

		  if(StopThread)
			 break;

		  VTIndy[i] = new ScanVTIndy(true);
		  //Увеличиваю время на 15 мин.
		  TDateTime Prob = Time();

		  Prob = Prob+15./24/60;
		  VTIndy[i]->TimeBreak = FormatDateTime("YYYY.MM.DD",Date())+ " " + FormatDateTime("HH:NN:SS",Prob);
		  VTIndy[i]->VtBase.BasePatchFileName = ListView1->Items->Item[0]->SubItems->Strings[0];
		  VTIndy[i]->VtBase.BaseMD5 = ListView1->Items->Item[0]->SubItems->Strings[2];
		  VTIndy[i]->VtBase.BaseSizeFile = ListView1->Items->Item[0]->SubItems->Strings[1].ToInt();
		  //Устанавливаем вести логирование или нет. Читается в ини файле.
		  VTIndy[i]->logirovanie =  logirovanie;
		  //VTIndy[i]->VtBase.BaseSHA256 = MyTestBase.BaseSHA256 = ListView1->Items->Item[0]->SubItems->Strings[3];
		  VTIndy[i]->VtBase.BaseSHA256 = ListView1->Items->Item[0]->SubItems->Strings[3];
		  VTIndy[i]->VtBase.BasePredScanData = FormatDateTime("YYYY.MM.DD",Date())+ " " + FormatDateTime("HH:NN:SS",Time());

		  VTIndy[i]->PotokNumber = i;
		  VTIndy[i]->FileNumber = ((numchek*)ListView1->Items->Item[0]->Data)->NumBer;
		  VTIndy[i]->VtBase.FileNumber = ((numchek*)ListView1->Items->Item[0]->Data)->NumBer;
		  VTIndy[i]->OnTerminate = &AtThreadTerminated;

		  VTIndy[i]->ScanIndyVT.Proverka = false;
		  //проверяем если в коммандной строке мы отправили 1 то смотрим ещё на ChReSca->Checked;
		  // если 0 то это norescan и мы сразу передаём 0
		  if(((numchek*)ListView1->Items->Item[0]->Data)->rescan)
			VTIndy[i]->ScanIndyVT.Rescan = ChReSca->Checked;
		  else
			VTIndy[i]->ScanIndyVT.Rescan = false;


		  if(AtOptions.ProxyVT.ProxiChecked)
		  {
			 VTIndy[i]->ScanIndyVT.ProxyVT = AtOptions.ProxyVT;
		  }

		  if(ApikeyNumber >= ApikeyCount)
		  {
			 ApikeyNumber = 0;
		  }

		  VTIndy[i]->ScanIndyVT.ApiKey = AtOptions.Apikey[ApikeyNumber];
		  VTIndy[i]->Start();
		  // удаляю строку
		  ListView1->Items->Item[0]->Delete();

		  ListView1->Repaint();
		  i++;
		  ApikeyNumber++;
		  //countSpisokNamePotok--;
		  //PauseT("00:00:01");
		  ProgressBar1->StepBy(1);
		  Application->ProcessMessages();
	   }



}
//---------------------------------------------------------------------------
